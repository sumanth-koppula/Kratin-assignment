<!DOCTYPE html>
<html>
<head>
  <title>Medication Reminder</title>
  <link rel="stylesheet" type="text/css" href="/css/styles.css">
</head>
<body>
  <h1>Medication Reminder</h1>
  <div class="medication-list">
    <h2>Medications</h2>
    <ul>
      <% medications.forEach(med => { %>
        <li>
          <strong><%= med.name %></strong> - <%= med.dosage %> - <%= med.schedule %>
          <form method="post" action="/delete/<%= med._id %>">
            <button type="submit">Delete</button>
          </form>
        </li>
      <% }); %>
    </ul>
  </div>
  <div class="add-medication">
    <h2>Add Medication</h2>
    <form method="post" action="/add">
      <label for="name">Name:</label>
      <input type="text" id="name" name="name" required><br>
      <label for="dosage">Dosage:</label>
      <input type="text" id="dosage" name="dosage" required><br>
      <label for="schedule">Schedule:</label>
      <input type="text" id="schedule" name="schedule" required><br>
      <button type="submit">Add</button>
    </form>
  </div>
</body>
</html>
